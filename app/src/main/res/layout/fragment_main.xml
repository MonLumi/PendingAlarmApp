<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:gravity="center"
        tools:context=".FragmentMainMenu"
        android:padding="30dp"
        android:background="@color/light_orange"
        android:id="@+id/fragment_main">

    <androidx.cardview.widget.CardView
            android:id="@+id/main_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UseCompoundDrawables">
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_panel_call"
                    android:layout_marginRight="5dp"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/make_a_pending_call"
                    android:textColor="@color/dark_orange"
                    android:gravity="center_vertical"
                    android:textSize="22sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_sms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UseCompoundDrawables">
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_panel_sms"
                    android:layout_marginRight="5dp"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/make_a_pending_sms"
                    android:textColor="@color/dark_orange"
                    android:gravity="center_vertical"
                    android:textSize="22sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
            android:id="@+id/main_alarm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                tools:ignore="UseCompoundDrawables">
            <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_panel_alarm"
                    android:layout_marginRight="5dp"
                    tools:ignore="ContentDescription,RtlHardcoded" />
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/make_a_pending_alarm"
                    android:textColor="@color/dark_orange"
                    android:gravity="center_vertical"
                    android:textSize="22sp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>