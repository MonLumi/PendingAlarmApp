<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="10dp"
        tools:ignore="RtlHardcoded">

    <ImageView
            android:id="@+id/iv_recycle_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_panel_alarm"
            tools:ignore="ContentDescription"
            android:layout_alignParentLeft="true" />


    <TextView
            android:id="@+id/recycle_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="25dp"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="center_vertical"
            android:text="@string/alarm_screen"
            android:textColor="@color/dark_orange"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_toRightOf="@id/iv_recycle_icon"
            android:layout_alignTop="@id/iv_recycle_icon" />

    <TextView
            android:id="@+id/recycle_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:fontFamily="sans-serif-light"
            android:text="@string/sample_time"
            android:textColor="@color/dark_orange"
            android:textSize="16sp"
            android:layout_alignBottom="@id/iv_recycle_icon"
            android:layout_toRightOf="@id/iv_recycle_icon" />

    <ImageView
            android:id="@+id/recycle_indicator"
            android:layout_width="70dp"
            android:layout_height="5dp"
            android:background="@color/dark_orange"
            tools:ignore="ContentDescription"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@id/iv_recycle_icon" />

    <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="5dp"
            android:background="@color/gray"
            android:layout_below="@id/recycle_time" />




</RelativeLayout>